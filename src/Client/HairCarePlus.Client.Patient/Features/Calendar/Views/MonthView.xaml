<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HairCarePlus.Client.Patient.Features.Calendar.ViewModels"
             xmlns:converters="clr-namespace:HairCarePlus.Client.Patient.Features.Calendar.Converters"
             x:Class="HairCarePlus.Client.Patient.Features.Calendar.Views.MonthView"
             x:DataType="viewmodels:MonthViewModel">

    <ContentView.Resources>
        <ResourceDictionary>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:BoolToBoldConverter x:Key="BoolToBoldConverter"/>
        </ResourceDictionary>
    </ContentView.Resources>

    <Grid RowDefinitions="Auto,Auto,*" 
          Padding="10">
        <!-- Заголовок месяца и кнопки навигации -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="Auto,*,Auto" 
              Margin="0,0,0,20">
            <Button Grid.Column="0"
                    Text="&lt;"
                    Command="{Binding PreviousMonthCommand}"
                    WidthRequest="50"
                    HeightRequest="40"
                    Margin="0,0,10,0"
                    BackgroundColor="{AppThemeBinding Light=#6962AD, Dark=#504C8A}"
                    TextColor="White"
                    CornerRadius="8"/>
            
            <Label Grid.Column="1"
                   Text="{Binding MonthTitle}"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="{AppThemeBinding Light=#333333, Dark=#E0E0E0}"/>
            
            <Button Grid.Column="2"
                    Text="&gt;"
                    Command="{Binding NextMonthCommand}"
                    WidthRequest="50"
                    HeightRequest="40"
                    Margin="10,0,0,0"
                    BackgroundColor="{AppThemeBinding Light=#6962AD, Dark=#504C8A}"
                    TextColor="White"
                    CornerRadius="8"/>
        </Grid>

        <!-- Дни недели с улучшенным стилем -->
        <Grid Grid.Row="1" 
              ColumnDefinitions="*,*,*,*,*,*,*" 
              Margin="0,0,0,10">
            <Label Grid.Column="0" Text="Пн" HorizontalOptions="Center" FontSize="15" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#555555, Dark=#BBBBBB}"/>
            <Label Grid.Column="1" Text="Вт" HorizontalOptions="Center" FontSize="15" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#555555, Dark=#BBBBBB}"/>
            <Label Grid.Column="2" Text="Ср" HorizontalOptions="Center" FontSize="15" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#555555, Dark=#BBBBBB}"/>
            <Label Grid.Column="3" Text="Чт" HorizontalOptions="Center" FontSize="15" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#555555, Dark=#BBBBBB}"/>
            <Label Grid.Column="4" Text="Пт" HorizontalOptions="Center" FontSize="15" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#555555, Dark=#BBBBBB}"/>
            <Label Grid.Column="5" Text="Сб" HorizontalOptions="Center" FontSize="15" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#6962AD, Dark=#A79FF7}"/>
            <Label Grid.Column="6" Text="Вс" HorizontalOptions="Center" FontSize="15" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#6962AD, Dark=#A79FF7}"/>
        </Grid>

        <!-- Календарная сетка с улучшенным дизайном и контрастом -->
        <CollectionView Grid.Row="2" 
                       ItemsSource="{Binding Days}"
                       ItemsLayout="VerticalGrid, 7"
                       Margin="0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:CalendarDayViewModel">
                    <Grid Padding="0" Margin="0">
                        <Border
                            StrokeThickness="0.5"
                            Stroke="{AppThemeBinding Light=#DDDDDD, Dark=#333333}"
                            StrokeShape="Rectangle"
                            BackgroundColor="{Binding IsCurrentMonth, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#FFFFFF|#2B2B2B|#F8F8F8|#222222'}"
                            HeightRequest="85"
                            VerticalOptions="Fill"
                            HorizontalOptions="Fill">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MonthViewModel}}, Path=DaySelectedCommand}"
                                                      CommandParameter="{Binding}"/>
                            </Border.GestureRecognizers>
                            
                            <Grid RowDefinitions="Auto,*">
                                <!-- Highlight for current day -->
                                <Grid ColumnSpan="2" IsVisible="{Binding IsToday}">
                                    <Border
                                        BackgroundColor="{AppThemeBinding Light=#6962AD, Dark=#504C8A}"
                                        HeightRequest="24"
                                        StrokeThickness="0"
                                        VerticalOptions="Start"
                                        HorizontalOptions="Fill"
                                        ZIndex="-1"/>
                                </Grid>
                                
                                <!-- Day number with clean styling -->
                                <Label Grid.Row="0"
                                       Text="{Binding Date.Day}"
                                       FontSize="16"
                                       TextColor="{Binding IsToday, Converter={StaticResource BoolToColorConverter}, ConverterParameter='White|White|#333333|#EEEEEE'}"
                                       FontAttributes="{Binding IsToday, Converter={StaticResource BoolToBoldConverter}}"
                                       HorizontalOptions="Center"
                                       Margin="0,4,0,2"
                                       Opacity="{Binding IsCurrentMonth, Converter={StaticResource BoolToColorConverter}, ConverterParameter='1.0|0.8|0.5|0.4'}"/>
                                
                                <!-- Event Icons in a centered horizontal layout -->
                                <HorizontalStackLayout Grid.Row="1" 
                                                     HorizontalOptions="Center" 
                                                     VerticalOptions="Start"
                                                     Spacing="2"
                                                     Margin="0,2,0,0">
                                    <!-- Medication icon -->
                                    <Border IsVisible="{Binding HasMedications}"
                                           StrokeThickness="0"
                                           BackgroundColor="#4CAF50"
                                           StrokeShape="RoundRectangle 4,4,4,4"
                                           WidthRequest="16"
                                           HeightRequest="16"
                                           Padding="0"
                                           Margin="1">
                                        <Label Text="💊" 
                                               TextColor="White"
                                               FontSize="10"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Border>
                                           
                                    <!-- Instruction icon -->
                                    <Border IsVisible="{Binding HasInstructions}"
                                           StrokeThickness="0"
                                           BackgroundColor="#9C27B0"
                                           StrokeShape="RoundRectangle 4,4,4,4"
                                           WidthRequest="16"
                                           HeightRequest="16"
                                           Padding="0"
                                           Margin="1">
                                        <Label Text="ℹ️" 
                                               TextColor="White"
                                               FontSize="10"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Border>
                                           
                                    <!-- Restriction icon -->
                                    <Border IsVisible="{Binding HasRestrictions}"
                                           StrokeThickness="0"
                                           BackgroundColor="#F44336"
                                           StrokeShape="RoundRectangle 4,4,4,4"
                                           WidthRequest="16"
                                           HeightRequest="16"
                                           Padding="0"
                                           Margin="1">
                                        <Label Text="⛔" 
                                               TextColor="White"
                                               FontSize="10"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Border>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView> 