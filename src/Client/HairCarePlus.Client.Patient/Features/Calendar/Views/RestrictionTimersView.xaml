<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HairCarePlus.Client.Patient.Features.Calendar.ViewModels"
             x:Class="HairCarePlus.Client.Patient.Features.Calendar.Views.RestrictionTimersView">

    <ContentView.Resources>
        <Style x:Key="RestrictionCardStyle" TargetType="Frame">
            <Setter Property="BackgroundColor" Value="#FFFFFF" />
            <Setter Property="BorderColor" Value="#E0E0E0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Margin" Value="0,8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="HasShadow" Value="False" />
        </Style>
        
        <Style x:Key="RestrictionTitleStyle" TargetType="Label">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="#212121" />
            <Setter Property="LineBreakMode" Value="TailTruncation" />
        </Style>
        
        <Style x:Key="RestrictionDescriptionStyle" TargetType="Label">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextColor" Value="#757575" />
            <Setter Property="LineBreakMode" Value="WordWrap" />
            <Setter Property="MaxLines" Value="2" />
        </Style>
        
        <Style x:Key="TimeRemainingStyle" TargetType="Label">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="#FF5722" />
            <Setter Property="HorizontalOptions" Value="End" />
        </Style>
        
        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="ProgressColor" Value="#FF5722" />
            <Setter Property="MinimumHeightRequest" Value="6" />
            <Setter Property="BackgroundColor" Value="#E0E0E0" />
        </Style>
    </ContentView.Resources>

    <Grid RowDefinitions="Auto,*" Margin="16">
        <!-- Header -->
        <Label Grid.Row="0" 
               Text="Active Restrictions" 
               FontSize="18" 
               FontAttributes="Bold"
               TextColor="#212121"
               Margin="0,0,0,16" />
               
        <!-- Restriction List -->
        <ScrollView Grid.Row="1">
            <StackLayout BindableLayout.ItemsSource="{Binding ActiveRestrictions}">
                <BindableLayout.EmptyView>
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="No active restrictions" 
                               TextColor="#757575"
                               HorizontalOptions="Center" />
                    </StackLayout>
                </BindableLayout.EmptyView>
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource RestrictionCardStyle}">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                                <Label Grid.Row="0" 
                                       Text="{Binding Title}" 
                                       Style="{StaticResource RestrictionTitleStyle}" />
                                       
                                <Label Grid.Row="1" 
                                       Text="{Binding Description}" 
                                       Style="{StaticResource RestrictionDescriptionStyle}" 
                                       Margin="0,4,0,12" />
                                       
                                <Label Grid.Row="2" 
                                       Text="{Binding RemainingTimeText, StringFormat='Remaining: {0}'}" 
                                       Style="{StaticResource TimeRemainingStyle}" 
                                       Margin="0,0,0,8" />
                                       
                                <ProgressBar Grid.Row="3" 
                                             Progress="{Binding ProgressPercentage, Converter={StaticResource DoubleToPercentageConverter}}" 
                                             Style="{StaticResource ProgressBarStyle}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentView> 