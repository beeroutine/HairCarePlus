<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style x:Key="RestrictionCircleStyle" TargetType="Border">
        <Setter Property="HeightRequest" Value="60" />
        <Setter Property="WidthRequest" Value="60" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="Stroke" Value="{StaticResource Primary}" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="30" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PhotoCardStyle" TargetType="Border">
        <Setter Property="HeightRequest" Value="350" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="12" />
            </Setter.Value>
        </Setter>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#1E2A35, Dark=#2C2C2E}" />
        <Setter Property="Padding" Value="0" />
    </Style>
</ResourceDictionary> 