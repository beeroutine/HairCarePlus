<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <!-- Временно определяем стили локально для избежания проблем с MergedDictionaries -->
    
    <!-- Минималистичный стиль кругов -->
    <Style x:Key="MinimalCircleStyle" TargetType="Border">
        <Setter Property="StrokeShape" Value="Ellipse" />
        <Setter Property="StrokeThickness" Value="1.5" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="WidthRequest" Value="44" />
    </Style>
    
    <!-- Базовый стиль карточки -->
    <Style x:Key="BaseCardStyle" TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 20" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="BackgroundColor" 
                Value="{AppThemeBinding Light={StaticResource TaskCardBackgroundLight}, 
                                       Dark={StaticResource TaskCardBackgroundDark}}" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="4,6" />
    </Style>
    
    <!-- Restriction circle использует MinimalCircleStyle -->
    <Style x:Key="RestrictionCircleStyle" TargetType="Border" BasedOn="{StaticResource MinimalCircleStyle}">
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray600}}" />
    </Style>

    <!-- Feed card background использует BaseCardStyle -->
    <Style x:Key="PhotoCardStyle" TargetType="Border" BasedOn="{StaticResource BaseCardStyle}" />

    <!-- Dock button uses shared PrimaryButton style -->
    <Style x:Key="DockButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}" />

    <!-- Info block удален - больше не используется -->
</ResourceDictionary> 