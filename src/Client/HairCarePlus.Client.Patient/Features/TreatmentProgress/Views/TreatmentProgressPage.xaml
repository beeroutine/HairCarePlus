<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HairCarePlus.Client.Patient.Features.TreatmentProgress.ViewModels"
             xmlns:models="clr-namespace:HairCarePlus.Client.Patient.Features.TreatmentProgress.Models"
             xmlns:converters="clr-namespace:HairCarePlus.Client.Patient.Common.Converters"
             xmlns:treatmentConverters="clr-namespace:HairCarePlus.Client.Patient.Features.TreatmentProgress.Converters"
             x:Class="HairCarePlus.Client.Patient.Features.TreatmentProgress.Views.TreatmentProgressPage"
             x:DataType="viewmodels:TreatmentProgressViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
            <treatmentConverters:EventTypeToIconConverter x:Key="EventTypeToIconConverter"/>
            <treatmentConverters:EventTypeToColorConverter x:Key="EventTypeToColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,Auto,*" Padding="16">
        <!-- Daily Progress - Improved visualization -->
        <Frame Grid.Row="0" 
               Margin="0,8,0,16" 
               Padding="16" 
               BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}"
               BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
               CornerRadius="16"
               HasShadow="False">
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="12">
                <!-- Header -->
                <Label Grid.Row="0" Grid.Column="0"
                       Text="Прогресс на сегодня" 
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
                
                <!-- Tasks Counter -->
                <Label Grid.Row="0" Grid.Column="1"
                       Text="{Binding CompletedTasks, StringFormat='{0} из {1}'}"
                       FontSize="16"
                       FontAttributes="Bold"
                       HorizontalOptions="End"
                       TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"/>
                
                <!-- Linear Progress Bar -->
                <Grid Grid.Row="1" Grid.ColumnSpan="2" RowDefinitions="Auto,Auto" RowSpacing="6">
                    <Frame HeightRequest="16"
                           Padding="0" 
                           BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                           CornerRadius="8"
                           HasShadow="False">
                        <Frame HorizontalOptions="Start"
                               WidthRequest="{Binding DailyProgressWidth}"
                               Margin="0"
                               Padding="0"
                               BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                               CornerRadius="8"
                               HasShadow="False"/>
                    </Frame>
                    
                    <Label Grid.Row="1" 
                           Text="{Binding DailyProgress, StringFormat='{0:P0} выполнено'}"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"/>
                </Grid>
            </Grid>
        </Frame>

        <!-- Horizontal Calendar Widget - Redesigned -->
        <ScrollView Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalScrollBarVisibility="Never"
                   Margin="0,0,0,16">
            <HorizontalStackLayout Spacing="10">
                <BindableLayout.ItemsSource>
                    <Binding Path="WeekDays"/>
                </BindableLayout.ItemsSource>
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:DayViewModel">
                        <Frame WidthRequest="70"
                               HeightRequest="105"
                               Padding="8"
                               BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                               BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Primary,White|Primary,Gray800'}"
                               CornerRadius="12"
                               HasShadow="False">
                            <Grid RowDefinitions="Auto,Auto,*" RowSpacing="4">
                                <!-- Day of Week -->
                                <Label Text="{Binding DayOfWeek}"
                                       FontSize="13"
                                       TextColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='White,Gray500|White,Gray400'}"
                                       HorizontalOptions="Center"/>
                                
                                <!-- Date Number -->
                                <Label Grid.Row="1"
                                       Text="{Binding Date}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='White,Gray900|White,White'}"
                                       HorizontalOptions="Center"/>
                                
                                <!-- Event Icons -->
                                <FlexLayout Grid.Row="2"
                                          Direction="Row"
                                          JustifyContent="Center"
                                          AlignItems="Center"
                                          AlignContent="Center"
                                          Wrap="Wrap"
                                          Margin="0,6,0,0">
                                    <!-- Dynamic icons for event types -->
                                    <Label IsVisible="{Binding HasEvents}"
                                           Text="{Binding TaskTypes, Converter={StaticResource EventTypeToIconConverter}}"
                                           FontSize="16"
                                           TextColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='White,Primary|White,Primary'}"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           HorizontalTextAlignment="Center"/>
                                    
                                    <!-- Number badge if more than 1 event -->
                                    <Frame IsVisible="{Binding HasTasks}"
                                           HeightRequest="20"
                                           WidthRequest="20"
                                           Padding="0"
                                           CornerRadius="10"
                                           BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='White,Secondary|White,Secondary'}"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Margin="4,0,0,0">
                                        <Label Text="{Binding TaskCount}"
                                               TextColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Primary,Primary|Primary,Primary'}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Frame>
                                </FlexLayout>
                            </Grid>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TreatmentProgressViewModel}}, Path=SelectDateCommand}"
                                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </HorizontalStackLayout>
        </ScrollView>

        <!-- Today's Tasks - Improved design -->
        <Frame Grid.Row="2" 
               BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}"
               BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
               CornerRadius="16"
               Padding="16"
               HasShadow="False">
            <Grid RowDefinitions="Auto,*">
                <Label Text="Задачи на день" 
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                       Margin="0,0,0,12"/>
                
                <ScrollView Grid.Row="1">
                    <CollectionView ItemsSource="{Binding DailyEvents}" ItemSizingStrategy="MeasureAllItems">
                        <CollectionView.EmptyView>
                            <VerticalStackLayout HorizontalOptions="Center" 
                                               VerticalOptions="Center"
                                               Margin="0,40">
                                <Label Text="Нет задач на выбранный день"
                                       FontSize="16"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:TreatmentEvent">
                                <SwipeView>
                                    <SwipeView.RightItems>
                                        <SwipeItems>
                                            <SwipeItem Text="Выполнено"
                                                     BackgroundColor="{StaticResource Primary}"
                                                     Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TreatmentProgressViewModel}}, Path=CompleteEventCommand}"
                                                     CommandParameter="{Binding .}"/>
                                        </SwipeItems>
                                    </SwipeView.RightItems>
                                    
                                    <Frame Margin="0,6" 
                                           Padding="16"
                                           BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}"
                                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                                           CornerRadius="12"
                                           HasShadow="False"
                                           Opacity="{Binding IsCompleted, Converter={StaticResource BoolToOpacityConverter}}">
                                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                                            <!-- Task Type Icon -->
                                            <Border Grid.RowSpan="2"
                                                   WidthRequest="40"
                                                   HeightRequest="40"
                                                   StrokeThickness="0"
                                                   StrokeShape="RoundRectangle 10,10,10,10"
                                                   BackgroundColor="{Binding Type, Converter={StaticResource EventTypeToColorConverter}}"
                                                   VerticalOptions="Center">
                                                <Label Text="{Binding Type, Converter={StaticResource EventTypeToIconConverter}}"
                                                       TextColor="White"
                                                       FontSize="20"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Border>

                                            <!-- Title and Description -->
                                            <Label Grid.Column="1"
                                                   Grid.Row="0"
                                                   Text="{Binding Title}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   Margin="12,0,0,0"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
                                            <Label Grid.Column="1"
                                                   Grid.Row="1"
                                                   Text="{Binding Description}"
                                                   FontSize="14"
                                                   Margin="12,0,0,0"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"/>

                                            <!-- Completion Checkbox -->
                                            <CheckBox Grid.Column="2"
                                                     Grid.RowSpan="2"
                                                     IsChecked="{Binding IsCompleted}"
                                                     Color="{StaticResource Primary}"
                                                     VerticalOptions="Center"/>
                                        </Grid>
                                    </Frame>
                                </SwipeView>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
            </Grid>
        </Frame>
    </Grid>

</ContentPage> 