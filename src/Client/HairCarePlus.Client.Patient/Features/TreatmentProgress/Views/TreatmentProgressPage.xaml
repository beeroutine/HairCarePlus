<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HairCarePlus.Client.Patient.Features.TreatmentProgress.ViewModels"
             xmlns:models="clr-namespace:HairCarePlus.Client.Patient.Features.TreatmentProgress.Models"
             x:Class="HairCarePlus.Client.Patient.Features.TreatmentProgress.Views.TreatmentProgressPage"
             x:DataType="viewmodels:TreatmentProgressViewModel"
             BackgroundColor="{StaticResource Gray100}"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,Auto,*" Padding="20">
        <!-- Дневной прогресс -->
        <Frame Grid.Row="0" Margin="0,10" Padding="15" BackgroundColor="{StaticResource White}">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Daily Progress" 
                           Style="{StaticResource SubheaderLabel}"/>
                    <Label Text="{Binding CompletedTasks, StringFormat='{0} of {1} tasks completed'}"
                           TextColor="{StaticResource Gray500}"/>
                </VerticalStackLayout>
                
                <!-- Круговой прогресс бар -->
                <Frame Grid.Column="1" 
                       HeightRequest="60" 
                       WidthRequest="60"
                       CornerRadius="30"
                       Padding="0"
                       BorderColor="{StaticResource Primary}"
                       BackgroundColor="{StaticResource White}">
                    <Grid>
                        <ProgressBar Progress="{Binding DailyProgress}"
                                   ProgressColor="{StaticResource Primary}"
                                   Scale="1.5"
                                   Rotation="-90"/>
                        <Label Text="{Binding DailyProgress, StringFormat='{0:P0}'}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}"/>
                    </Grid>
                </Frame>
            </Grid>
        </Frame>

        <!-- Горизонтальный календарь -->
        <ScrollView Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalScrollBarVisibility="Never">
            <HorizontalStackLayout Spacing="8" Margin="0,10">
                <BindableLayout.ItemsSource>
                    <Binding Path="WeekDays"/>
                </BindableLayout.ItemsSource>
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:DayViewModel">
                        <Frame BorderColor="{StaticResource Primary}"
                               BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Primary,White'}"
                               WidthRequest="85"
                               HeightRequest="110"
                               Padding="8"
                               Margin="0"
                               CornerRadius="15"
                               HasShadow="False">
                            <Grid RowDefinitions="25,30,25,20" RowSpacing="2">
                                <Label Text="{Binding DayOfWeek}"
                                       FontSize="12"
                                       TextColor="{Binding HasEvents, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Black,Gray500'}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                                <Label Grid.Row="1"
                                       Text="{Binding Date}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="{Binding HasEvents, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Black,Gray300'}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                                
                                <!-- Индикатор количества задач -->
                                <Frame Grid.Row="2"
                                       IsVisible="{Binding HasTasks}"
                                       HeightRequest="22"
                                       WidthRequest="22"
                                       Padding="0"
                                       BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='White,Secondary'}"
                                       CornerRadius="11"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center">
                                    <Label Text="{Binding TaskCount}"
                                           TextColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Primary,Primary'}"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                
                                <!-- Типы задач -->
                                <Label Grid.Row="3"
                                       Text="{Binding TaskTypes}"
                                       FontSize="10"
                                       TextColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='White,Gray500'}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Start"
                                       HorizontalTextAlignment="Center"
                                       MaxLines="1"
                                       LineBreakMode="TailTruncation"/>
                            </Grid>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TreatmentProgressViewModel}}, Path=SelectDateCommand}"
                                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </HorizontalStackLayout>
        </ScrollView>

        <!-- Список задач -->
        <Frame Grid.Row="2" Margin="0,10" Padding="15" BackgroundColor="{StaticResource White}">
            <Grid RowDefinitions="Auto,*">
                <Label Text="Today's Tasks" 
                       Style="{StaticResource SubheaderLabel}"
                       Margin="0,0,0,10"/>
                
                <ScrollView Grid.Row="1">
                    <CollectionView ItemsSource="{Binding DailyEvents}">
                        <CollectionView.EmptyView>
                            <VerticalStackLayout HorizontalOptions="Center" 
                                               VerticalOptions="Center">
                                <Label Text="No tasks for today"
                                       FontSize="18"
                                       TextColor="{StaticResource Gray500}"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:TreatmentEvent">
                                <SwipeView>
                                    <SwipeView.RightItems>
                                        <SwipeItems>
                                            <SwipeItem Text="Complete"
                                                     BackgroundColor="{StaticResource Primary}"
                                                     Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TreatmentProgressViewModel}}, Path=CompleteEventCommand}"
                                                     CommandParameter="{Binding .}"/>
                                        </SwipeItems>
                                    </SwipeView.RightItems>
                                    
                                    <Frame Margin="0,5" 
                                           Padding="15"
                                           BackgroundColor="{StaticResource White}"
                                           BorderColor="{StaticResource Gray200}"
                                           Opacity="{Binding IsCompleted, Converter={StaticResource BoolToOpacityConverter}}">
                                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                                            <!-- Иконка типа события -->
                                            <Frame Grid.RowSpan="2"
                                                   HeightRequest="40"
                                                   WidthRequest="40"
                                                   CornerRadius="20"
                                                   Padding="0"
                                                   BackgroundColor="{StaticResource Secondary}">
                                                <Label Text="{Binding Type}"
                                                       TextColor="{StaticResource Primary}"
                                                       FontSize="12"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Frame>

                                            <!-- Название и описание -->
                                            <Label Grid.Column="1"
                                                   Text="{Binding Title}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   Margin="10,0,0,0"/>
                                            <Label Grid.Column="1"
                                                   Grid.Row="1"
                                                   Text="{Binding Description}"
                                                   TextColor="{StaticResource Gray500}"
                                                   FontSize="14"
                                                   Margin="10,0,0,0"/>

                                            <!-- Индикатор выполнения -->
                                            <CheckBox Grid.Column="2"
                                                     Grid.RowSpan="2"
                                                     IsChecked="{Binding IsCompleted}"
                                                     Color="{StaticResource Primary}"/>
                                        </Grid>
                                    </Frame>
                                </SwipeView>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
            </Grid>
        </Frame>
    </Grid>

</ContentPage> 