<?xml version="1.0" encoding="utf-8" ?>
<common:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:common="clr-namespace:HairCarePlus.Client.Patient.Common"
                       xmlns:viewmodels="clr-namespace:HairCarePlus.Client.Patient.Features.Profile.ViewModels"
                       x:Class="HairCarePlus.Client.Patient.Features.Profile.Views.ProfilePage"
                       x:DataType="viewmodels:ProfileViewModel"
                       Title="{Binding Title}">

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,*" Padding="20">
            <!-- Profile Header with Photo -->
            <Grid Grid.Row="0" RowDefinitions="Auto,Auto" HorizontalOptions="Center" Margin="0,20">
                <Frame Grid.Row="0" HeightRequest="120" WidthRequest="120" CornerRadius="60" 
                       HorizontalOptions="Center" Padding="0" IsClippedToBounds="True">
                    <Image Source="{Binding Profile.PhotoUrl}" Aspect="AspectFill"
                           HeightRequest="120" WidthRequest="120"/>
                </Frame>
                <VerticalStackLayout Grid.Row="1" Spacing="5" Margin="0,10">
                    <Label Text="{Binding Profile.FirstName}" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Text="{Binding Profile.LastName}" FontSize="20" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Grid>

            <!-- Calendar Section -->
            <VerticalStackLayout Grid.Row="1" Spacing="10" Margin="0,20">
                <Label Text="Treatment Schedule" Style="{StaticResource SubheaderLabel}"/>
                <CollectionView ItemsSource="{Binding WeekDays}" 
                              HeightRequest="100" 
                              HorizontalScrollBarVisibility="Never"
                              SelectionMode="Single">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:DayViewModel">
                            <Frame BorderColor="{StaticResource Primary}" 
                                   BackgroundColor="{Binding Path=IsSelected, Converter={StaticResource BoolToColorConverter}}"
                                   WidthRequest="60" 
                                   HeightRequest="80"
                                   Padding="10">
                                <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                                    <Label Text="{Binding DayOfWeek}" 
                                           FontSize="14" 
                                           HorizontalOptions="Center"/>
                                    <Label Text="{Binding Date}" 
                                           FontSize="20" 
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProfileViewModel}}, Path=SelectDateCommand}"
                                                          CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <!-- Daily Tasks Section -->
            <VerticalStackLayout Grid.Row="2" Spacing="10" Margin="0,20">
                <Label Text="Today's Tasks" Style="{StaticResource SubheaderLabel}"/>
                <CollectionView ItemsSource="{Binding DailyTasks}"
                              HeightRequest="300">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:TaskViewModel">
                            <SwipeView>
                                <SwipeView.LeftItems>
                                    <SwipeItems>
                                        <SwipeItem Text="Complete"
                                                  BackgroundColor="Green"
                                                  Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProfileViewModel}}, Path=CompleteTaskCommand}"
                                                  CommandParameter="{Binding .}"/>
                                    </SwipeItems>
                                </SwipeView.LeftItems>
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem Text="Delete"
                                                  BackgroundColor="Red"
                                                  Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProfileViewModel}}, Path=DeleteTaskCommand}"
                                                  CommandParameter="{Binding .}"/>
                                    </SwipeItems>
                                </SwipeView.RightItems>
                                
                                <Frame Margin="0,5" Padding="15">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <CheckBox IsChecked="{Binding IsCompleted}"
                                                 VerticalOptions="Center"/>
                                        
                                        <VerticalStackLayout Grid.Column="1"
                                                           Spacing="5">
                                            <Label Text="{Binding Title}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding Instructions}"
                                                   FontSize="14"
                                                   TextColor="Gray"/>
                                        </VerticalStackLayout>
                                        
                                        <Label Grid.Column="2"
                                               Text="{Binding DueTime, StringFormat='{0:HH:mm}'}"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </Frame>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="No tasks for today"
                                   TextColor="{StaticResource Gray500}"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>

    <!-- Sync Button -->
    <common:BaseContentPage.ToolbarItems>
        <ToolbarItem Text="Sync" Command="{Binding SyncCommand}" Order="Primary"/>
    </common:BaseContentPage.ToolbarItems>

</common:BaseContentPage> 