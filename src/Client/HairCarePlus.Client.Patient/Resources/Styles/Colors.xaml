<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Task Category Colors -->
    <!-- Light Theme -->
    <Color x:Key="MedicationBlueLight">#3797F0</Color>
    <Color x:Key="AppointmentGreenLight">#4CAF50</Color>
    <Color x:Key="PhotoPurpleLight">#9C27B0</Color>
    <Color x:Key="VideoOrangeLight">#FF9800</Color>
    <Color x:Key="GeneralGrayLight">#757575</Color>
    <Color x:Key="CriticalRedLight">#F14336</Color>

    <!-- Dark Theme - Softer variants for better dark mode visibility -->
    <Color x:Key="MedicationBlueDark">#2B7BD9</Color>
    <Color x:Key="AppointmentGreenDark">#357A38</Color>
    <Color x:Key="PhotoPurpleDark">#6D1B7B</Color>
    <Color x:Key="VideoOrangeDark">#B26A00</Color>
    <Color x:Key="GeneralGrayDark">#9E9E9E</Color>
    <Color x:Key="CriticalRedDark">#A92E24</Color>

    <!-- Theme-aware category colors -->
    <toolkit:AppThemeColor x:Key="MedicationBlue" Light="{StaticResource MedicationBlueLight}" Dark="{StaticResource MedicationBlueDark}" />
    <toolkit:AppThemeColor x:Key="AppointmentGreen" Light="{StaticResource AppointmentGreenLight}" Dark="{StaticResource AppointmentGreenDark}" />
    <toolkit:AppThemeColor x:Key="PhotoPurple" Light="{StaticResource PhotoPurpleLight}" Dark="{StaticResource PhotoPurpleDark}" />
    <toolkit:AppThemeColor x:Key="VideoOrange" Light="{StaticResource VideoOrangeLight}" Dark="{StaticResource VideoOrangeDark}" />
    <toolkit:AppThemeColor x:Key="GeneralGray" Light="{StaticResource GeneralGrayLight}" Dark="{StaticResource GeneralGrayDark}" />
    <toolkit:AppThemeColor x:Key="CriticalRed" Light="{StaticResource CriticalRedLight}" Dark="{StaticResource CriticalRedDark}" />

    <!-- Base Colors -->
    <Color x:Key="Primary">#3478F6</Color>
    <Color x:Key="PrimaryDark">#1976D2</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="SecondaryDarkText">#9880e5</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray700">#9A9A9A</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <Color x:Key="PrimaryLight">#72ACF1</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLight}"/>

    <Color x:Key="Yellow100Accent">#F7B548</Color>
    <Color x:Key="Yellow200Accent">#FFD590</Color>
    <Color x:Key="Yellow300Accent">#FFE5B9</Color>
    <Color x:Key="Cyan100Accent">#28C2D1</Color>
    <Color x:Key="Cyan200Accent">#7BDDEF</Color>
    <Color x:Key="Cyan300Accent">#C3F2F4</Color>
    <Color x:Key="Blue100Accent">#3E8EED</Color>
    <Color x:Key="Blue200Accent">#72ACF1</Color>
    <Color x:Key="Blue300Accent">#A7CBF6</Color>

    <Color x:Key="CardBackgroundDark">#1E1E1E</Color>
    <Color x:Key="CardBackgroundLight">#F0F0F0</Color>

    <!-- Calendar Card Colors -->
    <Color x:Key="CardShadowLight">#CCE0F6</Color> <!-- ~20% opacity blue shadow -->
    <Color x:Key="CardShadowDark">#0000004D</Color> <!-- 30% black -->

    <Color x:Key="PressedOverlayLight">#0000000A</Color> <!-- black 4% -->
    <Color x:Key="PressedOverlayDark">#FFFFFF33</Color> <!-- white 20% -->

    <!-- Progress Ring track matches card background per theme -->
    <Color x:Key="ProgressTrackLight">#EAF4FC</Color> <!-- same as TaskCardBackgroundLight -->
    <Color x:Key="ProgressTrackDark">#1E2A35</Color> <!-- same as TaskCardBackgroundDark -->

    <!-- Brushes for shadows -->
    <SolidColorBrush x:Key="CardShadowLightBrush" Color="{StaticResource CardShadowLight}"/>
    <SolidColorBrush x:Key="CardShadowDarkBrush" Color="{StaticResource CardShadowDark}"/>

    <!-- Completed card backgrounds -->
    <Color x:Key="CardCompletedLight">#DDE7F6</Color>
    <Color x:Key="CardCompletedDark">#23313F</Color>

    <!-- Progress Page Colors -->
    <Color x:Key="BackgroundLight">#FFFFFF</Color>
    <Color x:Key="BackgroundDark">#121212</Color>
    <Color x:Key="ErrorColor">#E94545</Color>
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>

    <!-- Task / Event card colors (same as patient outgoing message bubble) -->
    <Color x:Key="TaskCardBackgroundLight">#EAF4FC</Color>
    <Color x:Key="TaskCardBackgroundDark">#1E2A35</Color>

    <!-- Text color on Task/Event cards -->
    <Color x:Key="TaskCardTextColorLight">Black</Color>
    <Color x:Key="TaskCardTextColorDark">White</Color>

    <!-- Filled progress arc is high-contrast (black/white) -->
    <Color x:Key="RingPrimaryLight">#000000</Color>
    <Color x:Key="RingPrimaryDark">#FFFFFF</Color>

</ResourceDictionary>