<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Colors -->
    <Color x:Key="ChatBackgroundColor">#F5F5F5</Color>
    <Color x:Key="OutgoingMessageColor">#E7FFE3</Color>
    <Color x:Key="IncomingMessageColor">#FFFFFF</Color>
    <Color x:Key="MessageTextColor">#1A1A1A</Color>
    <Color x:Key="TimestampColor">#8E8E93</Color>
    <Color x:Key="SendButtonColor">#6B4CD5</Color>

    <!-- Message Frame Style -->
    <Style x:Key="MessageFrameStyle" TargetType="Frame">
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="MaximumWidthRequest" Value="240" />
        <Setter Property="CornerRadius" Value="16" />
    </Style>

    <!-- Message Text Style -->
    <Style x:Key="MessageTextStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource MessageTextColor}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
        <Setter Property="LineHeight" Value="1.2" />
    </Style>

    <!-- Timestamp Style -->
    <Style x:Key="TimestampStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TimestampColor}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="Margin" Value="0,-2,0,0" />
    </Style>

    <!-- Input Frame Style -->
    <Style x:Key="InputFrameStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}" />
        <Setter Property="Padding" Value="12,4" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="BorderColor" Value="#E5E5E5" />
    </Style>

    <!-- Input Entry Style -->
    <Style x:Key="InputEntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!-- Action Button Style -->
    <Style x:Key="ActionButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource SendButtonColor}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="WidthRequest" Value="40" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- Doctor Info Style -->
    <Style x:Key="DoctorNameStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource MessageTextColor}" />
    </Style>

    <Style x:Key="DoctorSpecialtyStyle" TargetType="Label">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="TextColor" Value="{StaticResource Gray600}" />
    </Style>

    <Style x:Key="OnlineStatusStyle" TargetType="Label">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
    </Style>

</ResourceDictionary> 