<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Spacing -->
    <Thickness x:Key="PagePadding">16</Thickness>
    <Thickness x:Key="CardPadding">16</Thickness>
    <Thickness x:Key="InnerSpacing">8</Thickness>

    <!-- Corner radius -->
    <CornerRadius x:Key="CardCorner">12</CornerRadius>
    <CornerRadius x:Key="BlockCorner">8</CornerRadius>

    <!-- Font sizes -->
    <x:Double x:Key="FontCaption">12</x:Double>
    <x:Double x:Key="FontBody">14</x:Double>
    <x:Double x:Key="FontCardTitle">18</x:Double>
    <x:Double x:Key="FontPageTitle">20</x:Double>
</ResourceDictionary> 