<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HairCarePlus.Client.Patient"
             xmlns:converters="clr-namespace:HairCarePlus.Client.Patient.Features.Calendar.Converters"
             xmlns:commonConverters="clr-namespace:HairCarePlus.Client.Patient.Common.Converters"
             xmlns:calendarHelpers="clr-namespace:HairCarePlus.Client.Patient.Features.Calendar.Helpers"
             x:Class="HairCarePlus.Client.Patient.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/ChatStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Icons/icons.xaml" />
                <ResourceDictionary>
                    <converters:DateToColorConverter x:Key="DateToColorConverter" />
                    <converters:EventTypeToColorConverter x:Key="EventTypeToColorConverter" />
                    <converters:EventTypeToIconConverter x:Key="EventTypeToIconConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- App Color Palette -->
            <Color x:Key="PrimaryColor">#6962AD</Color>
            <Color x:Key="PrimaryVariantColor">#8C86D0</Color>
            <Color x:Key="SecondaryColor">#A0DAB2</Color>
            <Color x:Key="TextPrimaryColor">#333333</Color>
            <Color x:Key="TextSecondaryColor">#666666</Color>
            <Color x:Key="DisabledTextColor">#999999</Color>
            <Color x:Key="BackgroundColor">#FFFFFF</Color>
            <Color x:Key="SurfaceColor">#F5F5F5</Color>
            <Color x:Key="ErrorColor">#B00020</Color>
            <Color x:Key="BorderColor">#E0E0E0</Color>
            <Color x:Key="Primary">#6962AD</Color>
            
            <!-- Gray Scale Colors -->
            <Color x:Key="White">#FFFFFF</Color>
            <Color x:Key="Black">#000000</Color>
            <Color x:Key="Gray100">#F5F5F5</Color>
            <Color x:Key="Gray200">#EEEEEE</Color>
            <Color x:Key="Gray300">#E0E0E0</Color>
            <Color x:Key="Gray400">#BDBDBD</Color>
            <Color x:Key="Gray500">#9E9E9E</Color>
            <Color x:Key="Gray600">#757575</Color>
            <Color x:Key="Gray700">#616161</Color>
            <Color x:Key="Gray800">#424242</Color>
            <Color x:Key="Gray900">#212121</Color>
            
            <!-- Calendar Specific Colors -->
            <Color x:Key="SelectedDayColor">#6962AD</Color>
            <Color x:Key="EventIndicatorColor">#6962AD</Color>

            <!-- Event Type Colors -->
            <Color x:Key="MedicationBlue">#2196F3</Color>
            <Color x:Key="AppointmentGreen">#66BB6A</Color>
            <Color x:Key="PhotoPurple">#AB47BC</Color>
            <Color x:Key="VideoOrange">#FF9800</Color>
            <Color x:Key="GeneralGray">#9E9E9E</Color>
            <Color x:Key="CriticalRed">#FF5252</Color>
            <Color x:Key="Gray50">#FAFAFA</Color>

            <!-- Event Card Background Colors (Translucent) -->
            <Color x:Key="MedicationBackgroundColor">#182196F3</Color>
            <Color x:Key="MedicalVisitBackgroundColor">#1866BB6A</Color>
            <Color x:Key="PhotoBackgroundColor">#18AB47BC</Color>
            <Color x:Key="VideoBackgroundColor">#18FF9800</Color>
            <Color x:Key="GeneralRecommendationBackgroundColor">#189E9E9E</Color>
            <Color x:Key="CriticalWarningBackgroundColor">#18FF5252</Color>
            
            <!-- Material Controls Colors -->
            <Color x:Key="CheckBoxColor">#6962AD</Color>
            <Color x:Key="MaterialButtonColor">#6962AD</Color>
            
            <!-- Material Theme Colors -->
            <Color x:Key="colorPrimary">#6962AD</Color>
            <Color x:Key="colorPrimaryDark">#4D4891</Color>
            <Color x:Key="colorAccent">#A0DAB2</Color>
            <Color x:Key="colorControlNormal">#757575</Color>
            <Color x:Key="colorControlActivated">#6962AD</Color>
            <Color x:Key="colorControlHighlight">#D1CFEB</Color>
            <Color x:Key="colorButtonNormal">#6962AD</Color>
            <Color x:Key="colorSwitchThumbNormal">#F1F1F1</Color>
            <Color x:Key="colorOnPrimary">#FFFFFF</Color>
            <Color x:Key="colorOnSurface">#212121</Color>

            <!-- Converters -->
            <commonConverters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <commonConverters:BoolToTextConverter x:Key="BoolToTextConverter" />
            <commonConverters:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
            <commonConverters:IsNotNullConverter x:Key="IsNotNullConverter" />
            <commonConverters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <calendarHelpers:DoubleToPercentageConverter x:Key="DoubleToPercentageConverter" />
            <calendarHelpers:HasItemsConverter x:Key="HasItemsConverter" />
            <converters:DateHasEventTypeConverter x:Key="DateHasEventTypeConverter" />
            <converters:ProgressConverter x:Key="ProgressConverter" />

            <!-- Styles -->
            <Style x:Key="BaseFrameStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Padding" Value="16" />
                <Setter Property="Margin" Value="16,8" />
            </Style>

            <Style x:Key="CardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
                <Setter Property="BorderColor" Value="{StaticResource BorderColor}" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Margin" Value="16,8" />
                <Setter Property="Padding" Value="16" />
                <Setter Property="HasShadow" Value="False" />
            </Style>

            <Style x:Key="CalendarDayStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="BorderColor" Value="{StaticResource BorderColor}" />
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="HeightRequest" Value="32" />
                <Setter Property="WidthRequest" Value="32" />
                <Setter Property="HasShadow" Value="False" />
                <Setter Property="Margin" Value="1" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

            <Style x:Key="DayNumberStyle" TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="LineBreakMode" Value="NoWrap" />
                <Setter Property="Margin" Value="0" />
                <Setter Property="Padding" Value="0" />
            </Style>

            <Style x:Key="DayHeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextColor" Value="{StaticResource TextSecondaryColor}" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="Margin" Value="0,0,0,2" />
            </Style>

            <Style x:Key="MonthHeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

            <Style x:Key="SubheaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
            </Style>

            <Style x:Key="NavigationButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="WidthRequest" Value="40" />
                <Setter Property="HeightRequest" Value="40" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="CornerRadius" Value="20" />
            </Style>

            <Style x:Key="EventIndicatorStyle" TargetType="BoxView">
                <Setter Property="HeightRequest" Value="2" />
                <Setter Property="WidthRequest" Value="2" />
                <Setter Property="CornerRadius" Value="1" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="End" />
                <Setter Property="Margin" Value="0" />
            </Style>

            <Style x:Key="ErrorMessageStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#F14336" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Margin" Value="16,8" />
            </Style>

            <!-- Loading Indicator Style -->
            <Style x:Key="LoadingIndicatorStyle" TargetType="ActivityIndicator">
                <Setter Property="Color" Value="{StaticResource PrimaryColor}" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="WidthRequest" Value="32" />
                <Setter Property="HeightRequest" Value="32" />
            </Style>

            <!-- Calendar Selected Day Color -->
            <Color x:Key="SelectedDayBackgroundLight">#EFE9FF</Color>
            <Color x:Key="SelectedDayBackgroundDark">#3E3663</Color>
            <Color x:Key="TodayIndicatorColor">#6962AD</Color>

            <!-- Add the Material Icons font resource -->
            <FontImage x:Key="MaterialIcons" FontFamily="MaterialIcons" />

            <!-- Colors -->
            <Color x:Key="Error">#F14336</Color>
            <Color x:Key="Gray950">#141414</Color>

            <!-- Removed unused BoolConverter, EventTypeToBackgroundConverter, IntToBoolConverter -->
            <commonConverters:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
